import axios from 'axios';

const API_URL = 'http://localhost:8090/';

class PostService {
  getCompletedPosts() {
    return axios.get(API_URL + 'posts/complete');
  }

  getIncompletedPosts() {
    return axios.get(API_URL + 'posts/incomplete');
  }

  getAllPosts() {
    return axios.get(API_URL + 'AllPosts');
  }

  getPostsSortedByDate() {
    return axios.get(API_URL + 'posts/newestFirst');
  }
}

export default new PostService();
