import { axiosInstance } from "./axios-http-client"; // Import axiosInstance correctly

const API_URL = 'http://localhost:8090/';

class DonorService {
  viewDonorById(id) {
    return axiosInstance.get(API_URL + `donor/${id}`); // Fix URL concatenation
  }

  updateDonorNameById(id, newName) {
    return axiosInstance.patch(API_URL + `donor/${id}/name`, { name: newName }); // Fix URL and provide data as object
  }

  updateDonorEmailById(id, newEmail) {
    return axiosInstance.patch(API_URL + `donor/${id}/email`, { email: newEmail }); // Fix URL and provide data as object
  }

  updateDonorPasswordById(id, newPassword) {
    return axiosInstance.patch(API_URL + `donor/${id}/password`, { password: newPassword }); // Fix URL and provide data as object
  }

  deleteDonorById(id) {
    return axiosInstance.delete(API_URL + `donor/${id}`); // Fix URL concatenation
  }
}

export default new DonorService();
