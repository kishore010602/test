<!-- Display Existing Posts -->
<div *ngIf="posts.length > 0">
  <h2>Existing Posts</h2>
  <ul>
    <li *ngFor="let post of posts">
      <h3>{{ post.title }}</h3>
      <p>{{ post.description }}</p>
      <p>Category: {{ post.category }}</p>
      <p>Start Date: {{ post.startDate }}</p>
      <p>End Date: {{ post.endDate }}</p>
      <p>Amount Requested: {{ post.amountRequested }}</p>
      <p>Status: {{ post.status }}</p>
      <!-- Add more details as needed -->
    </li>
  </ul>
</div>
<div *ngIf="posts.length === 0">
  <p>No posts available.</p>
</div>

<!-- Form to Add New Post -->
<h2>Add New Post</h2>
<form (submit)="addPost()">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" [(ngModel)]="newPost.title" required>

  <label for="description">Description:</label>
  <textarea id="description" name="description" [(ngModel)]="newPost.description" required></textarea>

  <label for="category">Category:</label>
  <input type="text" id="category" name="category" [(ngModel)]="newPost.category" required>

  <!-- Add more fields for other post properties -->
  
  <label for="startDate">Start Date:</label>
  <input type="date" id="startDate" name="startDate" [(ngModel)]="newPost.startDate" required>

  <label for="endDate">End Date:</label>
  <input type="date" id="endDate" name="endDate" [(ngModel)]="newPost.endDate" required>

  <label for="amountRequested">Amount Requested:</label>
  <input type="number" id="amountRequested" name="amountRequested" [(ngModel)]="newPost.amountRequested" required>

  <label for="status">Status:</label>
  <input type="text" id="status" name="status" [(ngModel)]="newPost.status" required>
  
  <!-- Add more fields as needed -->

  <button type="submit">Add Post</button>
</form>
