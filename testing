import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.Assertions;

public class PostServiceImplTest {

    @Test
    void getPostsByTitleTest() {
        // Create a test post
        Post post = new Post("Title", "Description", "Category");
        postRepositoryDao.save(post);

        // Call the service method to get posts by title
        List<Post> posts = null;
        try {
            posts = postService.getPostsByTitle("Title");
        } catch (PostExceptions e) {
            throw new RuntimeException(e);
        }

        // Assertions
        Assertions.assertNotNull(posts);
        Assertions.assertEquals(1, posts.size());

        // Clean up: delete the test post from the database
        postRepositoryDao.delete(post);
    }
}
