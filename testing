import axios from 'axios';

const API_URL = 'http://localhost:8090/';

class PostService {
  constructor() {}

  async getPostsByCategory(category) {
    try {
      const response = await axios.get(API_URL + `posts/category/${category}`);
      return response.data;
    } catch (error) {
      console.error('Error fetching posts by category:', error);
      throw error; // Re-throw for handling in components
    }
  }

  async getPostsSortedByDate() {
    try {
      const response = await axios.get(API_URL + 'posts/newestFirst');
      return response.data;
    } catch (error) {
      console.error('Error fetching posts sorted by date:', error);
      throw error;
    }
  }

  async getCompletedPosts() {
    try {
      const response = await axios.get(API_URL + 'posts/complete');
      return response.data;
    } catch (error) {
      console.error('Error fetching completed posts:', error);
      throw error;
    }
  }

  async getIncompletePosts() {
    try {
      const response = await axios.get(API_URL + 'posts/incomplete');
      return response.data;
    } catch (error) {
      console.error('Error fetching incompleted posts:', error);
      throw error;
    }
  }

  async getAllPosts() {
    try {
      const response = await axios.get(API_URL + 'AllPosts');
      return response.data;
    } catch (error) {
      console.error('Error fetching all posts:', error);
      throw error;
    }
  }
}

export default new PostService();
