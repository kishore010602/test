const handleUpdateName = (e) => {
    e.preventDefault();

    DonorService.updateDonorNameById(user.id, user.newName)
      .then(() => {
        setUser((prevUser) => ({
          ...prevUser,
          name: user.newName,
          newName: '',
        }));
        alert('Name updated successfully');
      })
      .catch((error) => {
        console.error('Update error:', error);
      });
  };

  const handleUpdatePassword = (e) => {
    e.preventDefault();

    DonorService.updateDonorPasswordById(user.id, user.newPassword)
      .then(() => {
        setUser((prevUser) => ({
          ...prevUser,
          newPassword: '',
        }));
        alert('Password updated successfully');
      })
      .catch((error) => {
        console.error('Update error:', error);
      });
  };

  const handleDeleteAccount = () => {
    DonorService.deleteDonorById(user.id)
      .then(() => {
        sessionStorage.clear();
        alert('Account deleted successfully');
        navigate('/login');
      })
      .catch((error) => {
        console.error('Deletion error:', error);
      });
  };
