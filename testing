// Profile.js

import React, { useState, useEffect } from 'react';
import { useHistory } from 'react-router-dom';

const Profile = () => {
  const [posts, setPosts] = useState([]);
  const user = JSON.parse(sessionStorage.getItem('user'));
  const history = useHistory();

  useEffect(() => {
    if (!user) {
      history.push('/login'); // Redirect to login if user is not logged in
    } else {
      fetchPosts(user.id);
    }
  }, [user, history]);

  const fetchPosts = async (fundraiserId) => {
    try {
      const response = await fetch(`http://localhost:8090/posts/fundraiser/${fundraiserId}`);
      if (!response.ok) {
        throw new Error('Failed to fetch posts');
      }
      const data = await response.json();
      setPosts(data);
    } catch (error) {
      console.error('Error fetching posts:', error);
    }
  };

  const showPosts = () => {
    // Logic to display posts
    return (
      <div>
        <h3>Posts</h3>
        {posts.map(post => (
          <div key={post.id}>
            <h4>{post.title}</h4>
            <p>{post.description}</p>
            {/* Render other post details as needed */}
          </div>
        ))}
      </div>
    );
  };

  return (
    <div>
      <h2>Profile Page</h2>
      <button onClick={showPosts}>View Posts</button>
    </div>
  );
};

export default Profile;
