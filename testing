const handleUpdateName = (e) => {
  e.preventDefault();

  donorService.updateDonorNameById(user.id, user.newName)
    .then(() => {
      // Update session storage
      const storedUser = JSON.parse(sessionStorage.getItem('user'));
      sessionStorage.setItem('user', JSON.stringify({ ...storedUser, name: user.newName }));

      setUser((prevUser) => ({
        ...prevUser,
        name: user.newName,
        newName: '',
      }));
      alert('Name updated successfully');
    })
    .catch((error) => {
      console.error('Update error:', error);
    });
};
